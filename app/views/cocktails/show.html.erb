<div class="cocktail-banner">
  <div class="banner-overlay">
    <div class="banner-text">
      <h1><%= @cocktail.name %></h1>
    </div>
  </div>
</div>

<div class="flex-box">
  <div class="list">
    <div class="flex-box">
      <ul>
        <h2>Ingredients</h2>
        <% @cocktail.doses.each do |dose| %>
          <li>
            <%= "#{dose.description} - #{dose.ingredient.name} " %>
            <%= link_to "Ã—", dose_path(dose), method: :delete %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="show-form">
    <%= simple_form_for([@cocktail, @dose]) do |cock| %>
      <%= cock.input :description, label: "Amount", input_html: { class: 'input-field' } %>
      <%= cock.association :ingredient, select_class: { class: 'input-field' } %>
      <%= cock.submit "Add Ingredient", class: 'input-button' %>
    <% end %>
  </div>
</div>

<div class="flex-box">
  <div class="list">
    <div class="flex-box">
      <ul>
        <h2>Reviews</h2>
        <% @cocktail.reviews.each do |review| %>
          <div class="review">
            <li><%= "#{review.content}" %></li>
          </div>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="show-form">
    <%= simple_form_for([@cocktail, @review]) do |cock| %>
      <%= cock.input :content, label: "Review",input_html: { class: 'input-field' } %>
      <%= cock.submit "Submit Review", class: 'input-button' %>
    <% end %>
  </div>
</div>

